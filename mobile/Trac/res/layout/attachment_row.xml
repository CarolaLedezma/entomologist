<?xml version="1.0" encoding="utf-8"?>
    <TableLayout android:id="@+id/tableLayout1"
    			 android:layout_width="fill_parent"
    			 android:layout_height="fill_parent"
    			 xmlns:android="http://schemas.android.com/apk/res/android"
    			 android:stretchColumns="1">
        <TableRow android:id="@+id/tableRow1" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:text="Filename" android:id="@+id/attachmentFilename" android:textSize="20dp" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:textStyle="bold"></TextView>
            <TextView android:layout_width="wrap_content" android:text="Size" android:id="@+id/attachmentSize" android:textSize="20dp" android:layout_height="wrap_content" android:gravity="right"></TextView>
        </TableRow>
		<TableRow android:id="@+id/tableRow2" android:layout_width="wrap_content" android:layout_height="wrap_content">
		   <TextView android:text="Username" android:id="@+id/attachmentSubmitter" android:layout_width="wrap_content" android:textSize="20dp" android:layout_height="wrap_content"></TextView>
		            <TextView android:text="11/11/2010 14:45" android:id="@+id/attachmentTimestamp" android:layout_width="wrap_content" android:textSize="20dp" android:layout_height="wrap_content" android:gravity="right"></TextView>
        </TableRow>
        
        <TableRow android:id="@+id/tableRow3" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_span="2" android:text="Description" android:id="@+id/attachmentDescription" android:textSize="20dp" android:layout_height="wrap_content"></TextView>
        </TableRow>
    </TableLayout>
